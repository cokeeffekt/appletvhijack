          <collectionDivider alignment="left" accessibilityLabel="Just Added">
            <title>Movies</title>
          </collectionDivider>
          <shelf id="shelf_2">
            <sections>
              <shelfSection>
                <items>
                  {{#movies}}
                  <moviePoster id="shelf_item_6" accessibilityLabel="Something cool" onSelect="loadTrailerDetailPage('https://trailers.apple.com/details/testing');" onPlay="atv.loadURL('https://trailers.apple.com/play/testing');">
                    <title>{{title}}</title>
                    <subtitle>{{seeds}}/{{leech}}</subtitle>
                    <image>https://trailers.apple.com/trailers/independent/remember/images/poster-large.jpg</image>
                    <defaultImage>resource://Poster.png</defaultImage>
